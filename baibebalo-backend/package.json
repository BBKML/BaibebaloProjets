{
  "name": "baibebalo-backend",
  "version": "1.0.0",
  "description": "Backend API pour la plateforme de livraison BAIBEBALO - Korhogo, CÃ´te d'Ivoire",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:clean": "powershell -Command \"Get-NetTCPConnection -LocalPort 5000 -ErrorAction SilentlyContinue | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force }\" && nodemon index.js",
    "migrate": "node src/database/migrate.js",
    "migrate:reset": "node src/database/migrate.js --reset",
    "migrate:seed": "node src/database/seed.js",
    "seed:restaurants": "node seed-5-restaurants.js",
    "admin:create": "node src/scripts/create-admin.js",
    "admin:test": "node src/scripts/test-admin-login.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:smoke": "node scripts/smoke-test.js",
    "test:admin": "node test-admin-endpoints.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "logs:clear": "rm -rf logs/*"
  },
  "keywords": [
    "delivery",
    "food",
    "korhogo",
    "cote-ivoire",
    "mobile-money",
    "restaurant",
    "logistics"
  ],
  "author": "BAIBEBALO Team",
  "license": "PROPRIETARY",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.970.0",
    "@aws-sdk/lib-storage": "^3.970.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.3.7",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.12",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "sharp": "^0.33.1",
    "socket.io": "^4.6.0",
    "speakeasy": "^2.0.0",
    "twilio": "^4.23.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "typescript-eslint": "^8.53.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "nodemonConfig": {
    "ignore": [
      "logs/*",
      "uploads/*",
      "*.test.js"
    ],
    "delay": "2000"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": ["/node_modules/", "/outputs/"],
    "modulePathIgnorePatterns": ["<rootDir>/outputs"],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/outputs/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
